{{#unless @member}}
<section id="subscribe">
	<div class="row m-0">
		<div class="col text-center">
			<h2 class="mb-0">Subscribe to {{@site.title}}</h2>
			<p>{{@custom.subscribe_homepage_text}}</p>
			<a class="subscribe-button" href="#/portal/signup">
				<div>Enter your email</div>
				<span class="btn btn-primary">Subscribe</span>
			</a>
		</div>
	</div>
</section>
{{/unless}}