{{#if isSecondary}}
<ul class="nav">
  {{#foreach navigation}}
	<li class="nav-item nav-{{slug}}">
		<a href="{{url}}" class="nav-link">{{label}}</a>
	</li>
	{{/foreach}}
</ul>
{{else}}
<ul class="navbar-nav mr-auto">
  {{#foreach navigation}}
	<li class="nav-item nav-{{slug}}{{#if current}} active{{/if}}">
		<a class="nav-link" href="{{url absolute="true"}}">{{label}}
		{{#if current}}<span class="sr-only">(current)</span>{{/if}}
		</a>
	</li>
	{{/foreach}}
</ul>
{{/if}}