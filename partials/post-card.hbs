<article class="card post-card {{post_class}} relative">
	<a href="{{url}}">
		<div class="card-image-container">
		{{#if primary_tag}}
		{{#primary_tag}}
		<span class="card-tag badge absolute top-4 right-4" style="background-color: {{accent_color}};">{{name}}</span>
		{{/primary_tag}}
		{{/if}}
    {{#if feature_image}}
			<img class="card-image-top"
				srcset="{{img_url feature_image size="s"}} 300w,
								{{img_url feature_image size="m"}} 600w,
								{{img_url feature_image size="l"}} 1000w,
								{{img_url feature_image size="xl"}} 2000w"
				sizes="(max-width: 1000px) 400px, 800px"
				src="{{img_url feature_image size="m"}}"
				alt="{{title}}"
				loading="lazy"
			/>
		{{else}}
    	{{#if primary_tag.feature_image}}
			<img class="card-image-top"
				srcset="{{img_url primary_tag.feature_image size="s"}} 300w,
								{{img_url primary_tag.feature_image size="m"}} 600w,
								{{img_url primary_tag.feature_image size="l"}} 1000w,
								{{img_url primary_tag.feature_image size="xl"}} 2000w"
				sizes="(max-width: 1000px) 400px, 800px"
				src="{{img_url primary_tag.feature_image size="m"}}"
				alt="{{title}}"
				loading="lazy"
			/>
    	{{/if}}
    {{/if}}
		</div>
		
		<div class="card-body px-4">
			<h5 class="card-title mb-3">{{title}}</h5>
			<p class="card-text card-excerpt">{{excerpt characters="240"}}</p>
		</div>
	</a>
	<div class="card-footer px-4">
		<div class="flex items-center">
			<div class="flex-auto">
				<p class="card-text pt-2"><small class="text-muted"><time datetime="{{date format="YYYY-MM-DD"}}">{{date}}</time> <span class="mx-2"></span> {{reading_time}}</small></p>
			</div>
				{{#if @custom.show_author}}
				{{#foreach authors}}
				<a href="{{url}}" class="card-author flex-none" data-toggle="tooltip" aria-label="{{name}}" title="Posted by {{name}}">
					<div style="background-image: url({{img_url profile_image size="xs"}}?s=250&amp;d=mm&amp;r=x);"></div>
				</a>
				{{/foreach}}
				{{/if}}
		</div>
	</div>
</article>