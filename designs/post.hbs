{{!< default}}

<div class="canvas">
	<article class="article {{post_class}}">

    <header class="article-header">

			{{#if primary_tag}}
			<section class="article-tag">
				<a href="{{primary_tag.url}}">{{primary_tag.name}}</a>
			</section>
			{{/if}}

			<h1 class="article-title">{{title}}</h1>

			{{#if custom_excerpt}}
			<p class="article-excerpt">{{custom_excerpt}}</p>
			{{/if}}

			<div class="article-byline-meta">
				<h4 class="author-name">{{{authors}}}</h4>
				<div class="byline-meta-content">
					<time class="byline-meta-date" datetime="{{date}}">{{date}}</time>
					<span class="byline-reading-time"><span class="bull">&bull;</span> {{reading_time}}</span>
				</div>
			</div>

			<figure class="article-image">
            <img srcset="https://images.unsplash.com/photo-1493895565436-93db25637518?ixlib=rb-0.3.5&amp;q=80&amp;fm=jpg&amp;crop=entropy&amp;cs=tinysrgb&amp;w=1080&amp;fit=max&amp;s=790b6956954445ea55257afb642c9d1a 300w,
                        https://images.unsplash.com/photo-1493895565436-93db25637518?ixlib=rb-0.3.5&amp;q=80&amp;fm=jpg&amp;crop=entropy&amp;cs=tinysrgb&amp;w=1080&amp;fit=max&amp;s=790b6956954445ea55257afb642c9d1a 600w,
                        https://images.unsplash.com/photo-1493895565436-93db25637518?ixlib=rb-0.3.5&amp;q=80&amp;fm=jpg&amp;crop=entropy&amp;cs=tinysrgb&amp;w=1080&amp;fit=max&amp;s=790b6956954445ea55257afb642c9d1a 1000w,
                        https://images.unsplash.com/photo-1493895565436-93db25637518?ixlib=rb-0.3.5&amp;q=80&amp;fm=jpg&amp;crop=entropy&amp;cs=tinysrgb&amp;w=1080&amp;fit=max&amp;s=790b6956954445ea55257afb642c9d1a 2000w" sizes="(min-width: 1400px) 1400px, 92vw" src="https://images.unsplash.com/photo-1493895565436-93db25637518?ixlib=rb-0.3.5&amp;q=80&amp;fm=jpg&amp;crop=entropy&amp;cs=tinysrgb&amp;w=1080&amp;fit=max&amp;s=790b6956954445ea55257afb642c9d1a" alt="Sweet New Home">
        </figure>

		</header>

    <section class="content">
        {{{content}}}
    </section>
	</article>
</div>

{{#unless @member}}
<section class="footer-cta">
    <div class="inner">
        <h2>Sign up for more like this.</h2>
        <a class="footer-cta-button" href="#/portal">
            <div>Enter your email</div>
            <span>Subscribe</span>
        </a>
        {{!-- ^ This looks like a form element, but it's just a link to Portal,
        making the form validation and submission much simpler. --}}
    </div>
</section>
{{/unless}}


{{!-- Read more links, just above the footer --}}
<aside class="read-more-wrap">
    <div class="read-more inner">

			{{> "post-card" hide_tags="true"}}
			{{> "post-card" hide_tags="true"}}
			{{> "post-card" hide_tags="true"}}

    </div>
</aside>