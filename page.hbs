{{!< default}}

{{#post}}

<article id="article" class="article bg-primary-50 {{post_class}}">

	<header class="article-header">

		<div class="max-w-screen bg-slate-500 rounded-lg py-12 text-left">

		{{#if feature_image}}
			<figure class="article-image">
				<img class="site-header-cover"
						srcset="{{img_url feature_image size="s"}} 300w,
										{{img_url feature_image size="m"}} 600w,
										{{img_url feature_image size="l"}} 1000w,
										{{img_url feature_image size="xl"}} 2000w"
						sizes="(min-width: 1400px) 1400px, 92vw"
						src="{{img_url feature_image size="xl"}}"
						alt="{{title}}"
				/>
			</figure>
		{{/if}}
			<div class="w-full py-4 mx-auto relative mt-12 z-10 article-header-content">
				<h1>{{title}}</h1>
				{{#if custom_excerpt}}
				<p class="d-block">{{custom_excerpt}}</p>
				{{/if}}
			</div>
		</div>
	</header>

	<section class="article-content container max-w-6xl mx-auto relative md:py-20">
    {{content}}
	</section>
</article>

{{/post}}