{{!< default}}

<section id="author"  class="container">
	<div class="row">
		<div class="col-auto pt-2">
			{{#author}}
			<div class="card author-card mt-3">
				{{#if profile_image}}
				<img class="author-profile-pic" src="{{profile_image}}" alt="{{name}}" />
				{{else}}
				<span class="author-profile-pic">{{> "icons/avatar"}}</span>
				{{/if}}
				<h1 class="mt-4">{{name}}</h1>
				<p>
				{{#if bio}}
					{{bio}}
				{{else}}
					{{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}} published
				{{/if}}
				</p>

				<div class="author-profile-meta">
					{{#if location}}
					<div class="author-profile-location">üìç {{location}}</div>
					{{/if}}
					<div class="author-icons mt-2">
					{{#if website}}
					<a class="icon d-inline-block mr-2" href="{{website}}" target="_blank" rel="noopener">{{> "icons/website"}}</a>
					{{/if}}
					{{#if twitter}}
					<a class="icon d-inline-block mr-2" href="{{twitter_url}}" target="_blank" rel="noopener">{{> "icons/twitter"}}</a>
					{{/if}}
					{{#if facebook}}
					<a class="icon d-inline-block" href="{{facebook_url}}" target="_blank" rel="noopener">{{> "icons/facebook"}}</a>
					{{/if}}
					</div>
				</div>

			</div>
			{{/author}}
		</div>

		<div class="col">
			<div id="feed" class="post-feed pt-3">
				<div class="grid">
				{{#foreach posts}}
					{{> "post-card"}}
				{{/foreach}}
				</div>
			</div>
		</div>
	</div>
</section>
